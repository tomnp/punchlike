{
  "build": {
    "env": {
      "NODE_OPTIONS": "--openssl-legacy-provider",
      "NPM_FLAGS": "--legacy-peer-deps --no-audit --no-fund --yes"
    }
  },
  "framework": "nextjs",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm run vercel-install",
        "nodeVersion": "16.x"
      }
    }
  ]
} 